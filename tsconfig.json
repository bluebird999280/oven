{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@app/*" : ["app/*"],
      "@apis/*" : ["apis/*"],
      "@hooks/*" : ["hooks/*"],
      "@states" : ["states/"],
      "@states/*" : ["states/*"],
      "@assets/*" : ["assets/*"],
      "@constants/*" : ["constants/*"],
      "@components/*" : ["components/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
